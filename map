LA=qmap("Los Angeles", zoom = 11,maptype="roadmap",color="bw")

top_six <- request %>%
  filter(RequestType %in% c("Bulky Items",
                            "Graffiti Removal", 
                            "Metal/Household Appliances",
                            "Illegal Dumping Pickup",
                            "Electronic Waste",
                            "Dead Animal Removal"))

LA+
  stat_density2d(data=top_six,aes(x=Longitude,y=Latitude,fill=..level..),
                 geom = "polygon", alpha = 0.5) +
  scale_fill_gradient(low= "white", high = "#bd0026") +
  facet_wrap(~RequestType)+
  ggtitle("Request Type Geographic Distribution")
